{
	"$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
	"organizeImports": {
		"enabled": true
	},

	"files": {
		"ignore": ["node_modules", "biome.json"]
	},

	"linter": {
		"enabled": true,
		"rules": {
			"style": {},
			"suspicious": {
				"noImportAssign": "off"
			},
			"correctness": {
				"noUnusedVariables": "warn",
				"noUnusedImports": "error",
				"noUndeclaredVariables": "error"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 2,
		"lineWidth": 80
	},

	"javascript": {
		"formatter": {
			"quoteProperties": "asNeeded",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded",
			"quoteStyle": "single"
		}
	}
}
